<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name:" />

        <EditText
            android:id="@+id/etClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter the class name here"
            android:imeOptions="actionNext"
            android:maxLength="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor&apos;s Name:" />

        <EditText
            android:id="@+id/etProfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter the professor&apos;s name here"
            android:imeOptions="actionNext"
            android:maxLength="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter the class location here"
            android:imeOptions="actionNext"
            android:maxLength="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/tbM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textOff="M"
                android:textOn="M" />

            <ToggleButton
                android:id="@+id/tbT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textOff="T"
                android:textOn="T" />

            <ToggleButton
                android:id="@+id/tbW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:textOff="W"
                android:textOn="W" />

            <ToggleButton
                android:id="@+id/tbR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R"
                android:textOff="R"
                android:textOn="R" />

            <ToggleButton
                android:id="@+id/tbF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textOff="F"
                android:textOn="F" />
        </LinearLayout>

        <Button
            android:id="@+id/btnChangeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press above button." />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:paddingTop="50dp" >

        <Button
            android:id="@+id/btnAddClass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Add Class" />
    </RelativeLayout>

</RelativeLayout>