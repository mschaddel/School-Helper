<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:layout_marginTop="50dp"
        android:textSize="20sp" />

    <Button
        android:id="btnNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="tvSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Notifications" />

    <Button
        android:id="btnChangeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="btnNotifications"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Change Mode" />

    <Button
        android:id="btnChangeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="btnChangeMode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Change Profile" />

</RelativeLayout>